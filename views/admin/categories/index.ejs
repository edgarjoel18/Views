<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
    <h1 class="h2">Categories</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <div class="btn-group">
        <a href="./admin/articles/new" class="btn btn-sm btn-outline-secondary">New</a>
      </div>
    </div>
  </div>
  
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>Id</th>
          <th>Title</th>
          <th>Created At</th>
          <th>Updated At</th>
          <th>Published At</th>
          <th>Written By</th>
        </tr>
      </thead>
      <tbody>
        <% for (let article of articles) { %>
          <tr>
            <td><a href="/admin/articles/<%= article.id %>/edit"><%= article.id %></a></td>
            <td><a href="/admin/articles/<%= article.id %>/edit"><%= article.title %></a></td>
            <td><%= moment(article.createdAt).format(dateFormat) %></td>
            <td><%= moment(article.updatedAt).format(dateFormat) %></td>
            <td><%= article.publishedAt ? moment(article.publishedAt).format(dateFormat) : '' %></td>
            <td><%= article.user ? article.user.login : '' %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>